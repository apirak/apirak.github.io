---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import SchemaPerson from "../components/SchemaPerson.astro";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import "../styles/global.css";
import Highlight from "../components/Highlight.astro";

const pageTitle = "Home";
const pageDescription =
  "UX Design and Product Development insights by Apirak Panatkool. Learn about Agile UX, Vertical Slicing, UX-to-Code practices, AI in Product Design, and practical tutorials for UX Designers in Thailand.";

// Get all blog posts sorted by date (newest first)
const allPosts = await getCollection("blog");
const sortedPosts = allPosts.sort(
  (a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime()
);

// Color map for blog cards
const colorMap = {
  blue: "var(--color-card-blue)",
  gray: "var(--color-card-gray)",
  green: "var(--color-card-green)",
  pink: "var(--color-card-pink)",
  cream: "var(--color-card-cream)",
  yellow: "var(--color-card-yellow)",
};

const emoji = "ðŸ‘‹";

const colors = ["blue", "gray", "green", "pink", "cream", "yellow"] as const;
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <SchemaPerson slot="schema" />
  <Navbar slot="navbar" />

  <div class="container mx-auto px-4 py-12">
    <div class="max-w-6xl mx-auto">
      <!-- Hero Section - 2 Column Layout -->
      <header class="mb-32 mt-16">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <!-- Left Column: Text Content -->
          <div>
            <h1
              class="text-4xl md:text-5xl font-bold mb-6"
              style="color: var(--color-text-primary);"
            >
              Hi, I'm Apirak
              <span class="md:hidden">{emoji}</span>
            </h1>
            <p
              class="text-xl md:text-2xl leading-relaxed mb-8"
              style="color: var(--color-text-secondary);"
            >
              I believe the best way to learn is to teach, and
              <Highlight>the best way to grow is to share.</Highlight>
              This is why I explore design, development, and the messy, beautiful
              process of building things that work.
            </p>

            <!-- CTA Button -->
            <a
              href="/projects"
              class="inline-block px-8 py-3 font-medium rounded-lg transition-all hover:opacity-90"
              style="background-color: var(--color-text-primary); color: var(--color-bg-primary);"
            >
              View Projects
            </a>
          </div>

          <!-- Right Column: Waving Hand Icon -->
          <div class="hidden md:flex items-center justify-center">
            <div
              class="text-9xl md:text-[12rem] select-none"
              role="img"
              aria-label="Waving hand"
            >
              {emoji}
            </div>
          </div>
        </div>
      </header>

      <!-- Blog Section -->
      <section>
        <div
          class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-8 auto-rows-fr"
        >
          {
            sortedPosts.map((post, index) => (
              <article
                class="blog-card rounded-lg overflow-hidden transition-all duration-500 ease-in-out hover:shadow-md flex flex-col h-full"
                style={`background-color: ${colorMap[colors[index % colors.length]]};`}
              >
                {post.data.image && (
                  <a href={`/blog/${post.slug}`} class="block">
                    <div class="aspect-video overflow-hidden">
                      <Image
                        src={post.data.image}
                        alt={post.data.title}
                        width={800}
                        height={450}
                        loading={index < 6 ? "eager" : "lazy"}
                        class="w-full h-full object-cover"
                      />
                    </div>
                  </a>
                )}
                <div class="p-5 flex flex-col flex-1">
                  <h2 class="text-md font-bold mb-3" style="line-height: 1.4;">
                    <a
                      href={`/blog/${post.slug}`}
                      class="hover:underline"
                      style="color: var(--color-text-primary);"
                    >
                      {post.data.title}
                    </a>
                  </h2>
                  <p
                    class="mb-4 text-sm line-clamp-3"
                    style="color: var(--color-text-muted);"
                  >
                    {post.data.description}
                  </p>

                  <div
                    class="flex items-center justify-between text-sm mt-auto"
                    style="color: var(--color-text-muted);"
                  >
                    <time datetime={post.data.pubDate.toISOString()}>
                      {post.data.pubDate.toLocaleDateString("th-TH", {
                        year: "numeric",
                        month: "long",
                        day: "numeric",
                      })}
                    </time>
                    <a
                      href={`/blog/${post.slug}`}
                      class="font-medium"
                      style="color: var(--color-link-primary);"
                    >
                      Read more â†’
                    </a>
                  </div>
                </div>
              </article>
            ))
          }
        </div>
      </section>
    </div>
  </div>

  <Footer slot="footer" />
</BaseLayout>
