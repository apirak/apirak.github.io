---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import SchemaPerson from "../components/SchemaPerson.astro";
import "../styles/global.css";
import { Icon } from "astro-icon/components";

const pageTitle = "Contact";
const pageDescription =
  "Connect with Apirak Panatkool - UX Designer Thailand, Product Design Specialist. Join UX Thailand community (49K+ members), explore Figma Plugins, or inquire about UX/UI courses and consulting.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <SchemaPerson slot="schema" />
  <Navbar slot="navbar" />

  <div class="container mx-auto px-4 py-12">
    <div class="flex justify-center items-center min-h-[calc(100vh-12rem)]">
      <div class="contact-card border rounded-lg overflow-hidden">
        <div class="contact-card-content flex flex-col md:flex-row">
          {/* Profile Image */}
          <div class="profile-image-wrapper">
            <div class="profile-image"></div>
          </div>

          {/* Content */}
          <div class="px-6 pt-8 pb-6 flex flex-col justify-center">
            <h1 class="text-4xl font-bold mb-2 contact-title">
              Apirak Panatkool
            </h1>
            <p class="text-xl mb-6 contact-subtitle">
              I am a big believer that great user experience comes from everyone
              working as part of a team, not only for designers.
            </p>

            {/* Certifications */}
            <img
              src="/assets/image/certificate@2x.png"
              alt="Professional certifications: Certified Scrum Master (CSM), Certified Scrum Developer, Google Developer Expert in Product Design, Google Certified Sprint Master"
              class="w-full max-w-xs mb-8"
            />

            {/* Contact Links */}
            <div class="space-y-1">
              <div class="flex items-center gap-3">
                <Icon name="fa6-brands:facebook" class="w-4 h-4" />
                <a
                  href="https://www.fb.com/apirak"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="contact-link text-base"
                >
                  fb.com/apirak
                </a>
              </div>

              <div class="flex items-center gap-3">
                <Icon name="fa6-brands:linkedin" class="w-4 h-4" />
                <a
                  href="https://th.linkedin.com/in/apirak"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="contact-link text-base"
                >
                  linkedin.com/in/apirak
                </a>
              </div>

              <div class="flex items-center gap-3">
                <Icon name="fa6-solid:envelope" class="w-4 h-4" />
                <a
                  href="mailto:apirakb@gmail.com"
                  class="contact-link text-base"
                >
                  apirakb@gmail.com
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .contact-card {
    max-width: 430px;
    width: 100%;
    background-color: var(--color-bg-card);
    border-color: var(--color-border-card);
    box-shadow: var(--shadow-card);
  }

  /* Desktop horizontal layout */
  @media (min-width: 768px) {
    .contact-card {
      max-width: 900px;
    }
  }

  .contact-title {
    color: var(--color-text-primary);
  }

  .contact-subtitle {
    color: var(--color-text-secondary);
  }

  .contact-link {
    color: var(--color-link-primary);
    text-decoration: none;
  }

  .contact-link:hover {
    color: var(--color-link-hover);
    text-decoration: underline;
  }

  .profile-image-wrapper {
    flex-shrink: 0;
  }

  .profile-image {
    width: 100%;
    height: 280px;
    background-image: url("/assets/image/apirak@2x.jpg");
    background-position: center top;
    background-size: cover;
  }

  /* Desktop horizontal layout */
  @media (min-width: 768px) {
    .profile-image {
      width: 320px;
      height: auto;
      min-height: 400px;
    }
  }
</style>
