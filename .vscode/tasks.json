{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "astro: dev",
            "type": "shell",
            "command": "pnpm dev",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "."
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "Local.*http://localhost:\\d+"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "astro: dev + preview",
            "dependsOn": [
                "astro: dev"
            ],
            "dependsOrder": "sequence",
            "command": "${command:simpleBrowser.show}",
            "args": [
                "http://localhost:4321"
            ],
            "problemMatcher": []
        }
    ]
}
